<%= stylesheet_link_tag "checkout" %>
<div class="container">
    <div class="login-wrap">
    
    <div class="form">
      <%= form_with(model: profile, local: true) do |form| %>
        <% if profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(profile.errors.count, "error") %> prohibited this lrofile from being saved:</h2>

            <ul>
            <% profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :firstname %>
          <%= form.text_field :firstname, id: :profile_firstname %>
        </div>

        <div class="field">
          <%= form.label :lastname %>
          <%= form.text_field :lastname, id: :profile_lastname %>
        </div>

        <div class="field">
          <%= form.label :address %>
          <%= form.text_field :address, id: :profile_address %>
        </div>

        <div class="actions">
          <%= form.submit "Submit", :class => "button"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
